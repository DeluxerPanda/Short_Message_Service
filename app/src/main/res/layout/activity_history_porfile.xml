<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Profile_History_App_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/history_name"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:typeface="normal"
                tools:ignore="TextSizeCheck" />

            <ImageView
                android:id="@+id/btnToMainSmsSchedulerPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/Profile_History_App_Title"
                android:layout_alignTop="@id/Profile_History_App_Title"
                android:layout_marginStart="8dp"
                android:backgroundTintMode="src_over"
                android:clickable="true"
                android:contentDescription="To Hamburger"
                android:src="@android:drawable/ic_media_rew"
                tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck,ImageContrastCheck" />

            <ImageView
                android:id="@+id/btnToDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTintMode="src_over"
                android:clickable="true"
                android:contentDescription="To Delete"
                app:srcCompat="@drawable/ic_baseline_delete_outline"
                tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck,ImageContrastCheck" />

            <TextView
                android:id="@+id/Profile_History_ID_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/Profile_History_App_Title"
                android:text="@string/Custom_name"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:typeface="normal"
                tools:ignore="TextSizeCheck" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#333"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/Profile_History_group_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/gallery_thumb"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck"
                    android:contentDescription="TODO" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/Profile_History_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/Custom_name"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/history_info_date_and_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/set_date_start_date"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:textStyle="bold" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/btn_Edit_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTintMode="src_over"
                    android:clickable="true"
                    android:contentDescription="To Edit"
                    app:srcCompat="@drawable/ic_baseline_edit_24"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck,RtlHardcoded,TouchTargetSizeCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/history_info_Profile_Send_to"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            tools:ignore="TextSizeCheck" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="10sp">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="16sp"
                android:paddingStart="8sp"
                android:paddingTop="8sp"
                android:paddingEnd="8sp"
                android:paddingBottom="8sp"
                android:text="@string/app_contacts_name"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="@dimen/material_emphasis_medium"
                    android:paddingStart="8sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="8sp"
                    android:paddingBottom="8sp"
                    android:text="@string/app_contacts_name"
                    android:layout_gravity="top|right"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    tools:ignore="RtlHardcoded,TextContrastCheck" />

                <ImageView
                    android:id="@+id/btn_Edit_Contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTintMode="src_over"
                    android:clickable="true"
                    android:paddingBottom="15sp"
                    android:paddingRight="15sp"
                    android:paddingLeft="0dp"
                    android:contentDescription="To Edit"
                    android:layout_gravity="bottom|right"
                    app:srcCompat="@drawable/ic_baseline_edit_24"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck,RtlHardcoded,TouchTargetSizeCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/App_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/history_info_Message_name"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            tools:ignore="TextSizeCheck" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                    <TextView
                        android:id="@+id/Profile_History_Message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_text_160"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/btn_Edit_Message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTintMode="src_over"
                    android:clickable="true"
                    android:contentDescription="To Edit"
                    android:layout_gravity="bottom|right"
                    app:srcCompat="@drawable/ic_baseline_edit_24"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck,RtlHardcoded,TouchTargetSizeCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="15dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/button2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_now"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>






    </LinearLayout>


</ScrollView>